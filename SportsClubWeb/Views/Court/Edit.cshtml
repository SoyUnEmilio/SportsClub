@model SportsClubWeb.ViewModels.CourtViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Court</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourlyCourtCost" class="control-label"></label>
                <input asp-for="HourlyCourtCost" class="form-control" />
                <span asp-validation-for="HourlyCourtCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourlyIlluminationCost" class="control-label"></label>
                <input asp-for="HourlyIlluminationCost" class="form-control" />
                <span asp-validation-for="HourlyIlluminationCost" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsIndoor" /> @Html.DisplayNameFor(model => model.IsIndoor)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="Sport" class="control-label"></label>

                <select class="form-control" asp-for="Sport" asp-items="Html.GetEnumSelectList<CourtType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Sport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surface" class="control-label"></label>

                <select class="form-control" asp-for="Surface" asp-items="Html.GetEnumSelectList<Surface>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Surface" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

